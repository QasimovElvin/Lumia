@using Lumia.ViewModels
@model PaginateVM<Serv>

@{
    ViewData["Title"] = "Index";
    int count = ((Model.CurrentPage - 1) * 3)+1;
}
<div class="d-flex justify-content-end mr-2 mb-3">
    <a class="btn btn-success" asp-controller="Serv" asp-action="Create">Create Serv</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Serv table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                             Icon
                            </th>
                            <th>
                               Title
                            </th>
                            <th>
                               Description
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                   <i class="@item.Icon"></i>
                                </td>
                                <td>
                                   @item.Title
                                </td>
                                <td>
                                   @item.Description
                                </td>
                                <td>
                                    <a type="button" asp-controller="Serv" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-social-icon btn-outline-facebook"><i class="mdi mdi-border-color"></i></a>
                                </td>
                                <td>
                                    <a type="button" asp-controller="Serv" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-social-icon btn-outline-facebook"><i class="mdi mdi-popcorn"></i></a>
                                </td>
                            </tr>
                        }
                        <nav aria-label="...">
                            <ul class="pagination pagination-lg">
                                @for (int i = 1; i <=Model.PageCount; i++)
                                {
                                    <li class="page-item @(Model.CurrentPage==i?"active":"") "><a class="page-link" asp-route-page="@i">@i</a></li>
                                }
                            </ul>
                        </nav>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

